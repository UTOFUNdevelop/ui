#!/usr/bin/env sh
set -o errexit -o nounset -o xtrace

: "${PACKAGE_NAME:?}"

npm install --save-dev --workspace "./packages/$PACKAGE_NAME" \
  ts-node \
  @types/jest \
  jest \
  ts-jest

cd "./packages/$PACKAGE_NAME"

key_down='\033[B'

echo_sleep() {
  echo "$@"
  sleep 1.2
}

(
  # The following questions will help Jest to create a suitable configuration for your project
  sleep 4

  # ‚úî Would you like to use Jest when running "test" script in "package.json"? ‚Ä¶ no
  echo_sleep n

  # ‚úî Would you like to use Typescript for the configuration file? ‚Ä¶ yes
  echo_sleep y

  # ‚úî Choose the test environment that will be used for testing ‚Ä∫ node
  echo_sleep "$key_down"

  # ‚úî Do you want Jest to add coverage reports? ‚Ä¶ yes
  echo_sleep y

  # ‚úî Which provider should be used to instrument code for coverage? ‚Ä∫ v8
  echo_sleep ''

  # ‚úî Automatically clear mock calls and instances between every test? ‚Ä¶ no
  echo_sleep n

  # üìù  Configuration file created at .../packages/.../jest.config.ts
  sleep 2
) | npx jest --init

# `npx ts-jest config:init` doesn't work with existing jest config
# shellcheck disable=SC1004 #https://github.com/koalaman/shellcheck/wiki/SC1004#exceptions
sed -i.bak \
  -e '1i\
/* eslint max-len: ["error", { "ignoreComments": true }] */' \
  -e '\@// preset: undefined,@{
s@// @@
s@undefined@'\''ts-jest'\''@
}' \
  jest.config.ts
rm jest.config.ts.bak
